.pagination
    display: flex
    margin-left: auto
    padding: 8px
    &__first, &__prev, &__next, &__last 
        min-width: 36px
        cursor: pointer
        border: none
        font-size: 18px
        color: #fff
        margin-right: 8px
        background: linear-gradient(60deg, #ab47bc, #8e24aa)
        box-shadow: 0 12px 20px -10px #ab47bc, 0 4px 20px 0 rgba(0,0,0,.12), 0 7px 8px -5px rgba(0,188,212,.2)
        width: auto
        display: block;
        max-height: 44px;
        transition: all 300ms linear;
        font-family: "Roboto", "Helvetica", "Arial", sans-serif;
        font-weight: 300;
        border-radius: 3px
        position: relative
        &_disabled
            color: #9e9e9e
            background: #eee
            box-shadow: none
    &__indicator
        margin: 0 12px 0 4px
        font-size: 18px
