.pagination
    display: flex
    margin-left: auto
    padding: 8px
    &__first, &__prev, &__next, &__last 
        min-width: 36px
        cursor: pointer
        border: none
        font-size: 18px
        color: #222
        margin-right: 8px
        width: auto
        display: block;
        max-height: 44px;
        transition: all 300ms linear;
        font-family: "Roboto", "Helvetica", "Arial", sans-serif;
        font-weight: 300;
        border-radius: 3px
        position: relative
        &_disabled
            color: #9e9e9e
            cursor: default
    &__indicator
        margin: 0 12px 0 4px
        font-size: 18px
