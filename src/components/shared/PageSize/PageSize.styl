.page-size
    height: 20px
    margin-right: 24px
    margin-top: -3px
    *
        transition: all 300ms ease
        color: #444 !important
        &:hover, &:focus, &:active
            color: #444
    &.active
        *
            color: #444 !important
    .page-size
        &__select
            color: #444
            border-bottom: 1px solid #444
            &_active,
            &:hover
                border-bottom: 1px solid #444
            input, svg
                color: #444
    span 
        margin-right: 12px
        color: #444
