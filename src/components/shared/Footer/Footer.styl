.footer
    bottom: 0
    border-top: 1px solid #e7e7e7
    padding: 15px 0
    &__left
        float: left !important
        display: block
    &__right
        padding: 15px 0
        margin: 0
        font-size: 14px
        float: right !important
    &__list
        margin-bottom: 0
        padding: 0
        margin-top: 0
    &__copy
        color: #000
        text-decoration: none
        background-color: transparent
    &_block
        color: #000
        text-decoration: none
        background-color: transparent
        color: inherit
        padding: 15px
        text-transform: uppercase
        border-radius: 3px
        text-decoration: none
        position: relative
        display: block
        font-weight: 500
        font-size: 12px
    &_inline-block
        display: inline-block
        padding: 0px
        width: auto
