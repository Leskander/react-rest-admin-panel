.entity-page
    color: #fff
    font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif
    .title
        margin: 0
        font-size: 18px
        margin-top: 0
        margin-bottom: 0
        cursor: default
    .subtitle
        min-height: auto
        font-weight: 300
        margin-bottom: 3px
        text-decoration: 'none'
        margin-top: 0
        margin-bottom: 3px
        cursor: default
    .search
        position: absolute
        top: 20px
        right: 14px
    .filters
        display: flex
        justify-content: flex-end
        margin-top: 12px
    .card
        &__body
            padding: 0.9375rem 20px
            flex: 1 1 auto
            position: relative
            padding-left: 5px
            padding-right: 5px
        &__header
            padding: 15px
            background: linear-gradient(60deg, #ab47bc, #8e24aa)
            color: #FFFFFF
            position: relative
            box-shadow: 0 12px 20px -10px rgba(156, 39, 176, 0.28), 0 4px 20px 0px rgba(0, 0, 0, 0.12), 0 7px 8px -5px rgba(156, 39, 176, 0.2)
            border-radius: 3px
            margin-bottom: 0
            border-bottom: none
            z-index: 3 !important
            margin: 0 15px
            margin-top: -20px
            h4
                font-size: 18px
                margin-top: 0
                margin-bottom: 0
                cursor: default
            p
                font-weight: 300
                margin-bottom: 3px
                -webkit-text-decoration: 'none'
                text-decoration: 'none'
                margin-top: 14px
                margin-bottom: 3px
                cursor: default
        &__footer
            padding: 0
            padding-left: 5px
            padding-right: 5px
            padding-top: 10px
            background-color: transparent
            margin: 0 15px 20px
            border-radius: 0
            justify-content: space-between
            align-items: center
            display: flex
            background-color: transparent
            border: 0

