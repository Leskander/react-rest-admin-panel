.change-password
    width: 100%
    height: calc(100% - 200px);
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    header 
        margin-top: -100px
        display: flex
        justify-content: center
        align-items: center
        flex-wrap: wrap
        width: 100%
        h1
            text-align: center
            font-size: 36px
            width: 100%
            color: #4877bf
            font-family: Helvetica, sans-serif
            margin-bottom: 50px
    form
        width: 300px
        *
            width: 100%
    label
        width: 100%
        font-weight: 600
        font-size: 16px
        color: #4877bf
        font-family: Helvetica, sans-serif
        display: block
        margin-top: 24px
    input
        margin-bottom: 10px
        border-radius: 10px
        margin-top: 12px
        padding: 5px 5px 5px 0px
        transition: 200ms ease all
